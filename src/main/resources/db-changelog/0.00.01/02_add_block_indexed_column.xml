<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="alobarev" id="20161124-2-block-indexed-column">

        <addColumn tableName="block">
            <column name="indexed" type="BOOL" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>

    </changeSet>

    <changeSet author="alobarev" id="20161124-3-remove indexes-column">

        <dropIndex indexName="transaction_block" tableName="transaction"/>
        <dropIndex indexName="input_transaction" tableName="input"/>
        <dropIndex indexName="output_transaction" tableName="output"/>

    </changeSet>
</databaseChangeLog>
